{
  "manifest_version": 2,

  "name": "力扣中文题解",
  "description": "一键直达力扣中文题解。",
  "version": "0.0.1",
  "homepage_url":"https://www.google.com/",
  "update_url": "https://www.google.com/",

  "icons": {
    "128": "img/icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "力扣中文题解"
  },
  "permissions": [
    "declarativeContent",
    "*://*.leetcode.com/*",
    "*://*.leetcode.cn/*"
  ]
}
